<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_good_info_middle_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_good_info_intro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="상품소개"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_good_info_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="고객리뷰"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_good_info_ship"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="배송/상품정보"
            android:layout_weight="1"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_good_info_middle_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear_good_info_middle_top">

        <WebView
            android:id="@+id/webview_good_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </FrameLayout>

</RelativeLayout>
